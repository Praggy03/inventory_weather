<%= form_with(model: shipment) do |form| %>
  <% if shipment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(shipment.errors.count, "error") %> prohibited this shipment from being saved:</h2>

      <ul>
        <% shipment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :source_id, style: "display: block" %>
    <%= form.select :source_id, options_for_select(City.all.map {|city| [city.name.titleize, city.id]}, @shipment.source_id) %>
  </div>

  <div>
    <%= form.label :destination_id, style: "display: block" %>
    <%= form.select :destination_id, options_for_select(City.all.map {|city| [city.name.titleize, city.id]}, @shipment.destination_id) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
