<%= form_with(model: state) do |form| %>
  <% if state.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(state.errors.count, "error") %> prohibited this state from being saved:</h2>

      <ul>
        <% state.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :country_id, style: "display: block" %>
    <%= form.select :country_id, options_for_select(Country.all.map {|country| [country.name.titleize, country.id]}, @state.country_id) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
